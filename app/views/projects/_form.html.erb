<%= form_with model: project, local: true, class: "space-y-6" do |f| %>
  <div>
    <%= f.label :name, class: "block mb-1 text-sm font-medium text-stone-700 dark:text-stone-300" %>
    <%= f.text_field :name,
          placeholder: "Project name",
          class: "block w-full px-3 py-2 border border-stone-300 rounded-lg bg-stone-50 text-stone-900 text-sm
                 focus:outline-none focus:ring-2 focus:ring-stone-500 focus:border-stone-500 dark:bg-stone-700 dark:border-stone-600 dark:placeholder-stone-400 dark:text-white" %>
  </div>

  <div>
    <%= f.label :description, class: "block mb-1 text-sm font-medium text-stone-700 dark:text-stone-300" %>
    <%= f.text_area :description, rows: 4,
          placeholder: "Brief description",
          class: "block w-full px-3 py-2 border border-stone-300 rounded-lg bg-stone-50 text-stone-900 text-sm
                 focus:outline-none focus:ring-2 focus:ring-stone-500 focus:border-stone-500 dark:bg-stone-700 dark:border-stone-600 dark:placeholder-stone-400 dark:text-white" %>
  </div>

  <div>
    <%= f.label :status, class: "block mb-1 text-sm font-medium text-stone-700 dark:text-stone-300" %>
    <%= f.select :status,
          options_for_select(Project.statuses.keys.map { |s| [s.humanize, s] }, project.status),
          {},
          class: "block w-full px-3 py-2 border border-stone-300 rounded-lg bg-stone-50 text-stone-900 text-sm
                 focus:outline-none focus:ring-2 focus:ring-stone-500 focus:border-stone-500 dark:bg-stone-700 dark:border-stone-600 dark:text-white" %>
  </div>

  <div>
    <%= f.submit project.new_record? ? "Create Project" : "Update Project",
          class: "w-full py-2.5 bg-stone-600 text-white rounded-lg hover:bg-stone-500 focus:outline-none focus:ring-2 focus:ring-stone-500 font-medium text-sm" %>
  </div>
<% end %>