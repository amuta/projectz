<h1>Projects</h1>

<%= turbo_frame_tag "projects_list" do %>
  <ul class="list-group">
    <% @projects.each do |project| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to project.name, project_path(project), class: "stretched-link" %>
        <span class="badge bg-secondary"><%= project.status.humanize %></span>
      </li>
    <% end %>
  </ul>
<% end %>
