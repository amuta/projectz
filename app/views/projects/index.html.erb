<h1>Projects</h1>

<%= turbo_frame_tag "projects_list" do %>
  <ul class="list-group">
    <% @projects.each do |project| %>
    <li class="list-group-item">
      <%= link_to project.name,
                  project_path(project),
                  data: { turbo_frame: "_top" } %>
      <span class="badge bg-secondary"><%= project.status.humanize %></span>
    </li>
    <% end %>
  </ul>
<% end %>
